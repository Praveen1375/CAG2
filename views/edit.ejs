<% var body = `
    <h2>Edit Transaction</h2>
    <form action="/edit/<%= transaction.id %>" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= transaction.name %>" required>
        <label for="bank_value">Bank Value:</label>
        <input type="number" id="bank_value" name="bank_value" value="<%= transaction.bank_value %>" required>
        <label for="monthly_income">Monthly Income:</label>
        <input type="number" id="monthly_income" name="monthly_income" value="<%= transaction.monthly_income %>" required>
        <label for="monthly_spending">Monthly Spending:</label>
        <input type="number" id="monthly_spending" name="monthly_spending" value="<%= transaction.monthly_spending %>" required>
        <label for="desired_goal">Desired Goal:</label>
        <input type="number" id="desired_goal" name="desired_goal" value="<%= transaction.desired_goal %>" required>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= transaction.date %>" required>
        <button type="submit">Update</button>
    </form>
` %>
<%- include('layout', { body: body }) %>
