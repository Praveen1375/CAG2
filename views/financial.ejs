<% var body = `
    <h2>Financial Goals</h2>
    <form action="/financials" method="POST">
        <label for="bankValue">Current Bank Value:</label>
        <input type="number" id="bankValue" name="bankValue" required>
        <br>
        <label for="monthlyIncome">Monthly Income:</label>
        <input type="number" id="monthlyIncome" name="monthlyIncome" required>
        <br>
        <label for="monthlySpending">Monthly Spending:</label>
        <input type="number" id="monthlySpending" name="monthlySpending" required>
        <br>
        <label for="yearEndGoal">Year End Goal:</label>
        <input type="number" id="yearEndGoal" name="yearEndGoal" required>
        <br>
        <button type="submit">Submit</button>
    </form>
` %>
<%- include('layout', { body: body }) %>
