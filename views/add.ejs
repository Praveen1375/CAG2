<% var body = `
    <h2>Add Transaction</h2>
    <form action="/add" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="bank_value">Bank Value:</label>
        <input type="number" id="bank_value" name="bank_value" required>
        <label for="monthly_income">Monthly Income:</label>
        <input type="number" id="monthly_income" name="monthly_income" required>
        <label for="monthly_spending">Monthly Spending:</label>
        <input type="number" id="monthly_spending" name="monthly_spending" required>
        <label for="desired_goal">Desired Goal:</label>
        <input type="number" id="desired_goal" name="desired_goal" required>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required>
        <button type="submit">Add</button>
    </form>
` %>
<%- include('layout', { body: body }) %>
